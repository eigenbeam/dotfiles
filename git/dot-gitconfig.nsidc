[user]
	name = Kevin W. Beam
	email = kevin.beam@colorado.edu
[color]
	ui = auto
[apply]
	whitespace = nowarn
[core]
	autocrlf = input
	safecrlf = false
[alias]
        st = status
        sts = status --short
        hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
[push]
	default = upstream
        followTags = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential]
	helper = osxkeychain
[github]
	user = eigenbeam
[bitbucket "api.bitbucket.org/2.0"]
	user = kbeamnsidc
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
[init]
	defaultBranch = main
